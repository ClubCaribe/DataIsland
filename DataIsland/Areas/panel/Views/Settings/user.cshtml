@section modalwindows{
<div id="changeavatar" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <button aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                <h4 class="modal-title">[tr]Change Avatar[/tr]</h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group" style="text-align:center;">
                                <div class="fileinput fileinput-new" data-provides="fileinput">
                                    <input type="hidden" value="" name="..." />
                                    <div class="fileinput-new thumbnail" data-trigger="fileinput" style="width: 200px; height: 150px;">
                                        <img class="diuseravatar" id="avatachchangepreviewimage" alt="..." ng-src="/utilities/userAvatar/{{UserDetails.Username}}/200/sqr">
                                    </div>
                                    <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px; line-height: 6px;"></div>
                                    <div>
                                        <span class="btn btn-white btn-file">
                                            <span class="fileinput-new">[tr]Select image[/tr]</span>
                                            <span class="fileinput-exists">[tr]Change[/tr]</span>
                                            <input type="file" accept="image/*" name="avatarfile" file-model="UserDetails.Avatar">
                                        </span>
                                        <a class="btn btn-orange fileinput-exists" data-dismiss="fileinput" href="#">[tr]Remove[/tr]</a>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button data-dismiss="modal" class="btn btn-default" type="button">[tr]Close[/tr]</button>
                <button data-dismiss="modal"  class="btn btn-info" type="button" ng-click="changeAvatar()">[tr]Save changes[/tr]</button>
            </div>
        </div>
    </div>
</div>
}
