@model DataIsland.Models.UserLoginModel

@{
    ViewBag.Title = "[tr]Sign In[/tr]";
    Layout = "~/Views/Shared/_login_layout.cshtml";
}

@section headerdescription{
    [tr]Please enter your credential to authenticate with DataIsland[/tr]
}

<div class="form-login-error">
    <h3>[tr]Invalid login[/tr]</h3>
    <p>[tr]Login failed. Please try again.[/tr]</p>
</div>

@using (Html.BeginForm("index", "login", FormMethod.Post, new { id = "form_login" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.RedirectUrl)

    <div class="form-group">

        <div class="input-group">
            <div class="input-group-addon">
                <i class="entypo-user"></i>
            </div>

            @Html.TextBoxFor(model => model.Username, new { placeholder = "[tr]Username[/tr]", @class = "form-control", })
        </div>
         @Html.ValidationMessageFor(model => model.Username)
    </div>
    
    <div class="form-group">

        <div class="input-group">
            <div class="input-group-addon">
                <i class="entypo-key"></i>
            </div>

            @Html.PasswordFor(model => model.Password, new { placeholder = "[tr]Password[/tr]", @class = "form-control", })
        </div>
        @Html.ValidationMessageFor(model => model.Password)
    </div>

    <div class="form-group">
        <div class="input-group">
            <div class="input-group-addon">
                <i class="entypo-flag"></i>
            </div>
            <div>
                @Html.CheckBoxFor(model => model.RememberMe)
                <label>Remember Me</label>
            </div>
            
        </div>
    </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block btn-login">
                <i class="entypo-login"></i>
                [tr]Login In[/tr]
            </button>
        </div>


        }

        <div class="login-bottom-links">

            <a href="extra-forgot-password.html" class="link">Forgot your password?</a>

        </div>




        @section scripts{
            <script src="~/Scripts/pages/login-user.js"></script>
        }
