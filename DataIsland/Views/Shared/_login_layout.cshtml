
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<meta name="description" content="Sealcast DataIsland" />
	<meta name="author" content="" />
	
	<title>DataIsland | @ViewBag.Title</title>
	

	<link rel="stylesheet" href="~/Scripts/jquery-ui/css/no-theme/jquery-ui-1.10.3.custom.min.css">
	<link rel="stylesheet" href="~/Content/panel/css/font-icons/entypo/css/entypo.css">
	<link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic">
	<link rel="stylesheet" href="~/Content/panel/css/bootstrap.css">
	<link rel="stylesheet" href="~/Content/panel/css/neon-core.css">
	<link rel="stylesheet" href="~/Content/panel/css/neon-theme.css">
	<link rel="stylesheet" href="~/Content/panel/css/neon-forms.css">
    <link rel="stylesheet" href="~/Content/css/form-validation-helpers.css">
    @RenderSection("styles",false)

	<script src="~/Scripts/jquery-2.1.3.min.js"></script>

	<!--[if lt IE 9]><script src="assets/js/ie8-responsive-file-warning.js"></script><![endif]-->

	<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
	<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
		<script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
	<![endif]-->
	
</head>
<body class="page-body login-page login-form-fall" data-url="http://neon.dev">


<!-- This is needed when you send requests via Ajax -->
<script type="text/javascript">
    var baseurl = '';
</script>
	
<div class="login-container">
	
	<div class="login-header login-caret">
		
		<div class="login-content">
			
			<a href="index.html" class="logo">
				<img src="~/Content/panel/images/logo@2x.png" width="120" alt="" />
			</a>
			<p class="description">@RenderSection("headerdescription",false)</p>
			<!-- progress bar indicator -->
			<div class="login-progressbar-indicator">
				<h3>43%</h3>
				<span>[tr]logging in...[/tr]</span>
			</div>
		</div>
	</div>
	
	<div class="login-progressbar">
		<div></div>
	</div>
	<div class="login-form">
		<div class="login-content">
            @RenderBody()
		</div>
	</div>
	
</div>
	<!-- Bottom Scripts -->
	<script src="~/Scripts/gsap/main-gsap.js"></script>
	<script src="~/Scripts/jquery-ui/js/jquery-ui-1.10.3.minimal.min.js"></script>
	<script src="~/Scripts/bootstrap.js"></script>
	<script src="~/Scripts/joinable.js"></script>
	<script src="~/Scripts/resizeable.js"></script>
	<script src="~/Scripts/neon-api.js"></script>
	<script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
	<script src="~/Scripts/jquery.inputmask.bundle.min.js"></script>
	<script src="~/Scripts/neon-custom.js"></script>
    @RenderSection("scripts",false)
</body>
</html>
